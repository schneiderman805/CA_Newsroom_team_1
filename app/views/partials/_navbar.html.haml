.navbar
  %p= link_to 'Home', root_path

-if user_signed_in?
  %p="Hello, #{current_user.first_name}!"
  %p=link_to "Log out", destroy_user_session_path, method: :delete
  -if current_user.admin? 
    =link_to "Users", cms_articles_path
  -unless current_user.transactions.any? || current_user.journalist?
    %p=link_to "Buy subscription", new_cms_transaction_path
-else
  %p=link_to "Sign up", new_user_registration_path
  %p=link_to "Log in", new_user_session_path

